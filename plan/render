BPM.render
    var stage, renderer;
    var width, height;

    loadTexture(url) //Helper function to easily load image and texture from url
        var image = OurLoader.loadImage(url);
        var baseTex = new PIXI.BaseTexture(image);
        return new PIXI.Texture(baseTex);

    function loadTextureAnim(url, cellWidth, cellHeight) //Helper function (for linear animations) to easily load an image and a list of textures to create an animation.
        var textures = [];
        var image = OurLoader.loadImage(url);
        var baseTex = new PIXI.BaseTexture(image);
        for (var w=0; w<image.width/cellWidth; ++w) {
            for (var h=0; h<image.height/cellHeight; ++h) {
                var texture = new PIXI.Texture(baseTex, new PIXI.Rectangle(w * cellWidth, h * cellHeight, cellWidth, cellHeight));
                textures.push(texture);
            }
        }
        return textures;

    init
        stage = new PIXI.Stage(color);
        renderer = PIXI.autoDetectRenderer(width, height);
        renderer.view.tabIndex = 0;
        document.body.appendChild(renderer.view);
        renderer.view.focus();

    resize(w, h)
        width = w;
        height = w;
        renderer.resize(width, height);

    render
        renderer.render(stage);
